extends common
block vars
  - var moreClasses = ""
block body
  .grid-label.x8
    span {{t.labels.trimOffset}}
      span(class="iml-append--comma") {{t.commons.mm}}
  .grid-input.x4
    input(
      type="number"
      min="1"
      step="0.1"
      max="3"
      name="trimOffset"
      iml-immutable
      ng-disabled="!flow.isIdle"
      ng-model="opt.trimOffset")
